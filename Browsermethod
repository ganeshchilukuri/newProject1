package seleniumscripts;
import org.openqa.selenium.By;
import  org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver
;
import org.openqa.selenium.remote.RemoteWebDriver;

public class Browsermethods {

	public static void main(String[] args) throws InterruptedException {
		
		
		WebDriver driver = new ChromeDriver();
		driver.get("https://tutorialsninja.com/demo/index.php?route=account/login");
		driver.manage().window().maximize();
		String currentURL = driver.getCurrentUrl();
		System.out.println("Current URL is : " + currentURL);
		String pageTitle =driver.getTitle();
		System.out.println("Page title is : " + pageTitle);
		WebElement element = driver.findElement(By.xpath("//*[@id=\"content\"]/div/div[1]/div/a"));
		element.click();
		driver.findElement(By.id("input-firstname")).sendKeys("ramu");
		driver.findElement(By.id("input-lastname")).sendKeys("jagadesh");
		driver.findElement(By.id("input-email")).sendKeys("abcdefgh@gmail.com");
		driver.findElement(By.name("telephone")).sendKeys("9876543210");
		driver.findElement(By.name("password")).sendKeys("abc@12");
		driver.findElement(By.name("confirm")).sendKeys("abc@12");
	     //WebElement e1 = driver.findElement(By.xpath("//input[@name='newsletter']")).get(0).click();
	     //((RemoteWebDriver) e1).get(1).click();
		driver.findElement(By.xpath("//label[@class = 'radio-inline'][1]")).click();
		driver.findElement(By.name("agree")).click();
		driver.findElement(By.xpath("//input[@submit='Continue']")).click();
		driver.navigate().back();
		driver.navigate().forward();
		//Thread.sleep(3000);
		//driver.close();
		
		

	}

}
